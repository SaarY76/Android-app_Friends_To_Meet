<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtherUserProfileActivity"
    android:layoutDirection="ltr"

    android:textDirection="ltr"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/BackGroundForText"
                android:text="Profile" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

<!--                <ProgressBar-->
<!--                    android:id="@+id/progress_bar_Profile_Other"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:indeterminate="true" />-->

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageViewProfileOtherUser"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/border_buttons_layout" />

<!--                <ImageView-->
<!--                    android:id="@+id/vectorImageOther"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:src="@drawable/image_for_upload" />-->

            </FrameLayout>

<!--            <de.hdodenhof.circleimageview.CircleImageView-->
<!--                android:id="@+id/imageViewProfileOtherUser"-->
<!--                android:layout_width="200dp"-->
<!--                android:layout_height="200dp"-->
<!--                android:layout_gravity="center_horizontal"-->
<!--                android:scaleType="centerCrop"-->
<!--                />-->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="3dp"
                app:cardCornerRadius="5dp"
                android:background="#A4DFDF"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:textStyle="bold"
                            style="@style/BlackTextSize20"
                            android:text="Name : "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView

                            android:id="@+id/nameOtherProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/BlackTextSize20"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:textStyle="bold"
                            android:text="Age : "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/BlackTextSize20"/>

                        <TextView
                            android:id="@+id/ageOtherProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/BlackTextSize20"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:textStyle="bold"
                            android:text="Gender : "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/BlackTextSize20"/>

                        <TextView
                            style="@style/BlackTextSize20"
                            android:id="@+id/genderOtherProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:textStyle="bold"
                            android:text="Area : "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/BlackTextSize20"/>

                        <TextView
                            style="@style/BlackTextSize20"
                            android:id="@+id/areaOtherProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="3dp"
                app:cardCornerRadius="5dp"
                android:background="#A4DFDF"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:textStyle="bold"
                        style="@style/BlackTextSize20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"

                        android:text="Summary"

                        />

                    <TextView
                        android:id="@+id/summaryOtherProfileTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="3dp"
                app:cardCornerRadius="5dp"
                android:background="#A4DFDF"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:textStyle="bold"
                        style="@style/BlackTextSize20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Interests"

                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:id="@+id/interestsOtherProfileTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>