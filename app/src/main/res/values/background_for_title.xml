<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="BackGroundForText" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#1a237e</item> <!-- darker shade of Indigo -->
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/acme</item> <!-- specify your custom font here -->
        <item name="android:background">#FFFFFF</item> <!-- white background with 70% opacity -->
        <item name="android:shadowColor">#FFFFFF</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>


